{% if product and product.metafields.salonist.product_type %}
     {% assign salonist_product_type = product.metafields.salonist.product_type.value | downcase %}
          {% if salonist_product_type == "service" %}  
<div class="salonist-appointment" style="text-align: center; margin: 20px 0;">
    <style>
      .product-form__submit {display: none !important;}
      form[action="/cart/add"] { display: none !important; }
    </style>
  <button 
    class="salonist-book-btn"
    id="salonist-open"
    data-product-info='{"salonistid":{{ product.metafields.salonist.id.value }},
    "domainid":{{ product.metafields.salonist.domainid.value }},
    "productid":{{ product.id }},
    "variantid":{{ product.selected_or_first_available_variant.id }}
    }'
    
    style="background-color: {{ block.settings.button_color }}; color: {{ block.settings.text_color }};"
  >
    {{ block.settings.button_text }}
  </button>

 <link href="{{ 'salonist.css' | asset_url }}" rel="stylesheet">
{% render 'booking-form' %}
     <script src="{{ 'js/salonist/core/SalonistBase.js' | asset_url }}"></script>
    <script src="{{ 'js/salonist/managers/FormManager.js' | asset_url }}"></script>
    <script src="{{ 'js/salonist/managers/ApiManager.js' | asset_url }}"></script>
    <script src="{{ 'js/salonist/managers/ModalManager.js' | asset_url }}"></script>
    <script src="{{ 'js/salonist/managers/UIManager.js' | asset_url }}"></script>
    <script src="{{ 'js/app.js' | asset_url }}"></script>
</div> 
    {% endif %}
{% endif %}

{% schema %}
{
  "name": "Salonist Appointment",
  "target": "section",
  "settings": [
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#0d9488"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Book Now",
    }
  ]
}
{% endschema %}
