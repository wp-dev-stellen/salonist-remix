generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String   
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)

 
}

model CrmCredential {
  id            Int      @id @default(autoincrement())
  shop          String   @unique 
  name          String?
  email         String
  domainId      String
  userId        String
  clientId      String?
  clientSecret  String?
  
  loginStatus   Boolean  @default(false)
  createdAt     DateTime @default(now())

 
}
